#ifndef HUMMSTRUMM_COMPILECONFIG
#define HUMMSTRUMM_COMPILECONFIG

// Humm and Strumm version
#cmakedefine HUMMSTRUMM_VERSION "@HUMMSTRUMM_VERSION@"

// Platforms
#cmakedefine HUMMSTRUMM_PLATFORM_WIN32
#cmakedefine HUMMSTRUMM_PLATFORM_WIN64
#cmakedefine HUMMSTRUMM_PLATFORM_WINDOWS
#cmakedefine HUMMSTRUMM_PLATFORM_GNULINUX

#cmakedefine HUMMSTRUMM_WINDOWSYSYEM_WINDOWS
#cmakedefine HUMMSTRUMM_WINDOWSYSYEM_X11

// File name of the log.
#cmakedefine HUMMSTRUMM_LOG_FILENAME "@HUMMSTRUMM_LOG_FILENAME@"
// Is the log in XML mode?
// NOTE: This uses a relatively unknown feature that will evaluate
// boolean values to 0 or 1 before inserting them into the header
// file.
#cmakedefine01 HUMMSTRUMM_LOG_XMLMODE
// Minimum level of log messages to output.
#cmakedefine HUMMSTRUMM_LOG_LOGLEVEL @HUMMSTRUMM_LOG_LOGLEVEL@


// Stating heap size
#cmakedefine HUMMSTRUMM_HEAP_SIZE @HUMMSTRUMM_HEAP_SIZE@
// Size by which to expand the heap each time it expands
#cmakedefine HUMMSTRUMM_HEAP_EXPAND @HUMMSTRUMM_HEAP_EXPAND@

// Method of math calculations
#cmakedefine HUMMSTRUMM_MATH_PRECISE

// Debug mode?
#cmakedefine HUMMSTRUMM_DEBUG

#endif // #ifndef HUMMSTRUMM_CONFIG
